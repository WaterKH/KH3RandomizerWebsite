        <div class="col-md-12">
            <a href="https://www.digitalocean.com/?refcode=075bbdd84c8b&utm_campaign=Referral_Invite&utm_medium=Referral_Program&utm_source=badge">
                <img src="https://web-platforms.sfo2.digitaloceanspaces.com/WWW/Badge%202.svg" alt="DigitalOcean Referral Badge" width="75%" style="margin-top: 25px;"  />
            </a>
        </div>
    </div>
</div>

<div class="divider"></div>


@code {
    public string RelativePath = "";

    protected override void OnInitialized()
    {
        this.RelativePath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
    }
}
