@inject NavigationManager NavigationManager

<div class="top-row pl-4 navbar">
    <a class="navbar-brand" href="">
        <img src="images/logo.png" style="width: 100%;" />
    </a>
</div>

<div class="middle-row">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi-shuffle" aria-hidden="true" style="font-size: 1.5rem; color: #F11B43;"></span>
                <b style="font-size: 1.1rem; margin-left: 20px;">
                    Randomizer
                    @if (string.IsNullOrEmpty(this.RelativePath))
                    {
                        <span class="selector" style="color: #F11B43;"></span>
                    }
                </b>
                
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="guide" style="font-size: 1.1rem;">
                <span class="bi-file-earmark-text" aria-hidden="true" style="font-size: 1.5rem; color: #F4CF8E;"></span>
                <b style="font-size: 1.1rem; margin-left: 20px;">Guide</b>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="spoilerlog" style="font-size: 1.1rem;">
                <span class="bi bi-door-open" aria-hidden="true" style="font-size: 1.5rem; color: #9555DC;"></span>
                <b style="font-size: 1.1rem; margin-left: 20px;">Spoiler Log</b>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="sourcecode" style="font-size: 1.1rem;">
                <span class="bi bi-terminal" aria-hidden="true" style="font-size: 1.5rem; color: #5AC4FF;"></span>
                <b style="font-size: 1.1rem; margin-left: 20px;">Source Code</b>
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="support" style="font-size: 1.1rem;">
                <span class="bi bi-question-circle" aria-hidden="true" style="font-size: 1.5rem; color: #43D967;"></span>
                <b style="font-size: 1.1rem; margin-left: 20px;">Support</b>
            </NavLink>
