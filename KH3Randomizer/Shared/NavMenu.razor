@code {
    [CascadingParameter] public IModalService Modal { get; set; }

    public string RelativePath = "";

    protected override void OnInitialized()
    {
        this.RelativePath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
    }


    @* Create Open Quick Seed Modal *@
    private void OpenQuickSeedModal()
    {
        var parameters = new ModalParameters();
        var options = new ModalOptions { Class = "modal-custom" };

        Modal.Show<CreateQuickSeedModal>("Create Quick Seed", parameters, options);
    }
}
